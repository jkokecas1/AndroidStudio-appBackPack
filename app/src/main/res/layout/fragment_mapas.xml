<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3BB7ED"
    android:gravity="center"
    tools:context=".Fragments.MapasFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageInfor"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_dialog_info" />

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/imageMapas"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:src="@drawable/img_baja_california_norte" />

        <RadioGroup
            android:id="@+id/radioGrup"
            android:layout_width="350dp"
            android:layout_height="196dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/radioButton"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_redondeado"
                android:text="RadioButton"
                android:textSize="20dp" />

            <Button
                android:id="@+id/radioButton4"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_redondeado"
                android:text="RadioButton"
                android:textSize="20dp" />

            <Button
                android:id="@+id/radioButton2"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="RadioButton"
                android:background="@drawable/button_redondeado"
                android:textSize="20dp" />

            <Button
                android:id="@+id/radioButton3"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_redondeado"
                android:text="RadioButton"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="363dp"
                android:layout_height="47dp"
                android:orientation="horizontal" />

        </RadioGroup>


    </LinearLayout>

</FrameLayout>