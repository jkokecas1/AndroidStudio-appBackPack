<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3BB7ED"
    tools:context=".Fragments.ContinenteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageIn"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@android:drawable/ic_dialog_info" />

        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/imageMapBanderas"
            android:layout_width="match_parent"
            android:layout_height="293dp"
            android:src="@drawable/ic_mapa_doblado" />

        <RadioGroup
            android:id="@+id/radioGrupo"
            android:layout_width="373dp"
            android:layout_height="364dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/but1"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_redondeado"
                android:text="RadioButton"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but2"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_redondeado"
                android:text="RadioButton"
                android:textSize="20dp" />

            <Button
                android:id="@+id/but3"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_redondeado"
                android:layout_gravity="center"
                android:text="RadioButton"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="363dp"
                android:layout_height="47dp"
                android:orientation="horizontal"/>

        </RadioGroup>


    </LinearLayout>
</FrameLayout>